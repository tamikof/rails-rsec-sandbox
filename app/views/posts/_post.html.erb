<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= post.body %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Tag:</strong>
    <%= post.tag %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= post.status %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Is admin:</strong>
    <%= post.is_admin %>
  </p>
</div>
